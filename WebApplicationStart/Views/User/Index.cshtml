@model User
<h2>Данные пользователя</h2>
<div>
    <dl class="dl-horizontal">
        <dt>ID:</dt>
        <dd>@Model.IdUser</dd>

        <dt>Имя:</dt>
        <dd>@Model.Name</dd>

        <dt>Логин:</dt>
        <dd>@Model.Login</dd>

        <dt>Телефон:</dt>
        <dd>@Model.Telephone</dd>

        <dt>Email:</dt>
        <dd>@Model.Email</dd>
    </dl>
</div>